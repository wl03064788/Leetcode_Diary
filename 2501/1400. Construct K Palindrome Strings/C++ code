class Solution {
public:
    bool canConstruct(string s, int k) {
        if (s.length() < k)
            return false;
        if (s.length() == k)
            return true; // self is the palindrome
        vector<int> freq(26);
        int odd_c = 0;
        for (auto& i : s) {
            freq[i - 'a']++;
        }
        for (auto i : freq) {
            if ((i % 2) == 1)
                odd_c++;
        }
        return odd_c <= k;
    }
};
